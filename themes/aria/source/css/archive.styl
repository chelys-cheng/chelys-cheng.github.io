@import "variables";
@import "nib";
.archive-container {
  padding-left: 2em;
  .archive-counter {
    position: relative;
    padding-left: 1em;
    font-size: 2em;
    &::after {
      content: " ";
      position: absolute;
      left: 0;
      top: 50%;
      margin-left: -0.25em;
      margin-top: -0.25em;
      width: 0.5em;
      height: 0.5em;
      background: $color-background;
      border-radius: 50%;
    }
  }
  .archive-title {
    position: relative;
    padding-left: 1em;
    &::after {
      content: " ";
      position: absolute;
      left: 0;
      top: 50%;
      margin-left: -0.25em;
      margin-top: -0.25em;
      width: 0.5em;
      height: 0.5em;
      background: $color-background;
      border-radius: 50%;
    }
  }
  .archive-post {
    position: relative;
    padding-left: 1em;
    margin-left: 0;
    .post-title {
      padding: 0;
      margin: 0;
      display: inline-block;
    }
    &::after {
      content: " ";
      position: absolute;
      left: 0;
      top: 50%;
      margin-left: -0.4em;
      margin-top: -0.4em;
      width: 0.8em;
      height: 0.8em;
      background: $color-background;
      border-radius: 50%;
    }
  }
}
